<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<LangVersion>latest</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>AspNetSaml</PackageId>
    <Title>AspNetSaml</Title>
    <Version>2.1.0</Version>
    <Authors>Alex from Jitbit</Authors>
    <Copyright>Copyright Jitbit 2017-2023</Copyright>
    <PackageProjectUrl>https://github.com/jitbit/AspNetSaml</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/jitbit/AspNetSaml</RepositoryUrl>
    <Description>SAML component for ASP.NET</Description>
    <PackageTags>saml;sso;asp.net</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Security.Cryptography.Xml" Version="6.0.1" />
  </ItemGroup>

</Project>
